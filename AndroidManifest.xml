<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.drake.raygun"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Level"
            android:label="@string/title_activity_level"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".Play"
            android:label="@string/title_activity_play"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".GameOver"
            android:label="@string/title_activity_game_over"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".Play2"
            android:label="@string/title_activity_play2"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".Mission"
            android:label="@string/title_activity_mission" >
        </activity>
        <activity
            android:name=".Leaderboard"
            android:label="@string/title_activity_leaderboard" >
        </activity>
        <activity
            android:name=".KC"
            android:label="@string/title_activity_kc" >
        </activity>
    </application>

</manifest>
